    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "netlify-cli": "^3.34.0"
  },
  "scripts": {
    "server:server": "node src/server/index.js",
    "server": "node src/server/index.js",
    "client": "react-scripts start",
    "dev": "concurrently --names=server,client \"yarn run server\" \"yarn run client\"",
