    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "concurrently": "^6.1.0",
    "dotenv": "^9.0.2",
    "fastify": "^3.15.1",
    "fastify-static": "^4.0.1",
    "husky": "^6.0.0",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.7",
    "npm": "^7.13.0",
    "pino-pretty": "^4.8.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-error-boundary": "^3.1.3",
    "react-player": "^2.9.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
